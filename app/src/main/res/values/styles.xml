<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- v3 Theme -->
    <style name="AppThemeV3" parent="Theme.MaterialComponents.Bridge">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/v3_primary</item>
        <item name="android:textColor">@color/v3_textColor</item>
        <item name="colorOnPrimarySurface">@color/v3_textColor</item>
        <item name="statusBarBackground">@color/v3_primary</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorSecondary">@color/v3_secondary</item>
        <item name="colorAccent">@color/v3_accent</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorSurface">@color/v3_background</item>
        <item name="android:colorBackground">@color/v3_background</item>
        <item name="colorError">#F44336</item>
        <item name="toolbarStyle">@style/ToolbarV3</item>
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="materialAlertDialogTheme">@style/AppThemeOverlay.Dialog</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet.Theme</item>
        <item name="android:navigationBarColor">@color/v3_background</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/v3_primary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>

    <style name="AppThemeV3.NoStatusBar" parent="AppThemeV3">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="statusBarBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarV3" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/v3_primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppThemeOverlay.Dialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/SentinelThemeDialog</item>
        <item name="colorSurface">#121417</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="SentinelThemeDialog" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/AppTheme.Alert.Shape</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#c7c7c7</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/green_ui_2</item>
        <item name="rippleColor">@color/green_ui_2</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.BottomSheet.Theme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
        <item name="bottomSheetStyle">@style/AppTheme.BottomSheet</item>
    </style>

    <style name="AppTheme.BottomSheet" parent="@style/Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/AppTheme.BottomSheet.Shape</item>
    </style>

    <style name="Animation.Design.BottomSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_sheet_slide_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_sheet_slide_out</item>
    </style>

    <style name="AppTheme.BottomSheet.Shape" parent="">
        <item name="cornerSize">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="AppTheme.Alert.Shape" parent="">
        <item name="cornerSize">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


    <style name="AppTheme.Splash" parent="AppThemeV3">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/v3_background</item>
        <item name="statusBarBackground">@color/v3_background</item>
    </style>


    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeV3.ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color_state_list</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TabTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="SwipeBackLayout">
        <item name="edge_size">120dp</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>


</resources>
